{
  "name": "@gatewaycash/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"webpack --mode development --watch\" \"yarn start\"",
    "test": "webpack --mode development && TEST_MODE=true mocha --exit build/server.js",
    "build": "webpack --mode development",
    "production": "pm2 start build/server.js",
    "start": "nodemon --ignore public --ignore src build/server.js",
    "setup": "node setupEnvironment.js"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bitcore-lib-cash": "^0.19.0",
    "dotenv": "^6.1.0",
    "mocha": "^5.2.0",
    "node-mysql": "^0.4.2",
    "pm2": "^3.2.2",
    "sha256": "^0.2.0",
    "uglifyjs-webpack-plugin": "^2.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.2.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  }
}
